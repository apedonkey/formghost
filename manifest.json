{
  "manifest_version": 3,
  "name": "FormGhost",
  "version": "2.1.0",
  "description": "Record, replay, and automate browser workflows with privacy-first AI form filling (zero PII sent)",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation",
    "webRequest",
    "cookies",
    "tabs"
  ],
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Start/Stop recording"
    },
    "add-annotation": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Add annotation"
    },
    "pause-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Pause/Resume recording"
    },
    "toggle-replay": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Pause/Resume replay"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/selectors.js",
        "content/waitDetector.js",
        "content/annotator.js",
        "content/assertionCapture.js",
        "content/previewSidebar.js",
        "content/recorder.js",
        "content/replayOverlay.js",
        "content/replayer.js",
        "content/formScanner.js",
        "content/formFiller.js",
        "content/unmatchedFieldsUI.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "editor/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
